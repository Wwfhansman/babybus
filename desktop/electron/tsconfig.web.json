{
  "extends": "@electron-toolkit/tsconfig/tsconfig.web.json",
  "include": [
    "src/renderer/src/env.d.ts",
    "src/renderer/src/**/*",
    "src/renderer/src/**/*.tsx",
    "src/preload/*.d.ts"
  ],
  "compilerOptions": {
    "composite": true,
    "baseUrl": ".",
    "moduleResolution": "bundler",
    "jsx": "react-jsx",
    "types": ["vite/client", "react", "react-dom"],
    "paths": {
      "@renderer/*": [
        "src/renderer/src/*"
      ]
    }
  }
}
